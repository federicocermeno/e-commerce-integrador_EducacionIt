{{#if listado.length }}
    {{#each listado}}
    <article href="" class="card" >
            <div class="card__article">
                <div class="card__image" style="background-image: url('{{foto}}')">
                </div>
                <div class="card__content">
                    <h3 class="card__heading">{{nombre}}</h3>
                    <div class="card__description">
                        <div class="card__description-price">${{precio}}</div>
                        <div class="card__description-details">{{detalles}}</div>
                        <span class="card__description-chart"onclick="agregarCarrito(event,'{{_id}}',this); mensajeCarrito()"<i class="fas fa-shopping-cart"></i>
                            Agregar al carrito
                        </span>
                    </div>
                </div>
            </div>
                        <span class="mensajeCarrito" onclick="mostrarMensaje()">
                            <div class="mensajeCarrito__flex-container">
                                <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                                    <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none"/>
                                    <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
                                </svg>
                                <h1>Agregado al carrito</h1>
                            </div>
                        </span>
    </article>
    {{/each}}
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}
