{{#if productos.length }}
    <table>
        <tr>
            <th>nombre</th>
            <th>precio</th>
            <th>stock</th>
            <th>marca</th>
            <th>categoria</th>
            <th>detalles</th>
            <th>foto</th>
            <th>envio</th>
        </tr>

    {{#each productos}}
        <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{stock}}</td>
            <td>{{marca}}</td>
            <td>{{categoria}}</td>
            <td>{{detalles}}</td>
            <td> 
                <img src="{{foto}}" width="50" alt="{{nombre}}">
            </td>
            {{#if envio}}
                <td>Si</td>
            {{else}}
                <td>No</td>
            {{/if}}    
        </tr>
    {{/each}}
</table>
{{/if}}